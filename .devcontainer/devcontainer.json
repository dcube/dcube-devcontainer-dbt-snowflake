{
    "name": "dbt-snowflake",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/app,type=bind",
    "workspaceFolder": "/workspaces/app",
    "mounts": [
        "type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly"
    ],
    "runArgs": [
        "--env-file",
        ".devcontainer/.credentials.env"
    ],
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "args": {
            "VARIANT": "3.11-bullseye",
            "NODE_VERSION": "lts/*"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "sanaajani.taskrunnercode",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "ms-python.mypy-type-checker",
                "ms-python.flake8",
                "eeyore.yapf"
            ],
            "settings": {
                "container.type": "dbt-snowflake",
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
                "dbt.dbtPythonPathOverride": "${workspaceFolder}/.venv/bin/python",
                "python.createEnvironment.contentButton": "hide",
                "python.analysis.typeCheckingMode": "strict",
                "python.analysis.importFormat": "absolute",
                "python.analysis.logLevel": "Trace",
                "python.languageServer": "Pylance",
                "files.trimTrailingWhitespace": true,
                "files.trimFinalNewlines": true,
                "files.insertFinalNewline": true,
                "files.eol": "\n",
                "files.association": {
                    "*.sql": "jinja-sql",
                    "*.yaml": "jinja-yaml",
                    "*.yml": "jinja-yaml",
                    "*.md": "jinja-md"
                },
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/.mypy_cache": true,
                    "**/.venv": true,
                    "**/.pytest_cache": true,
                    "**/.python_packages": true
                },
                "editor.formatOnSaveMode": "modifications",
                "editor.formatOnSave": true,
                "editor.formatOnType": false,
                "mypy-type-checker.args": [],
                "python.dependencyManager": "pip",
                "python.testing.coverageEnabled": false,
                "python.testing.pytestEnabled": false,
                "python.testing.unittestEnabled": false,
                "editor.defaultFormatter": "eeyore.yapf",
                "git.preCommitEnabled": false,
                "sqlfluff.executablePath": "${workspaceFolder}/.venv/bin/sqlfluff",
                "sqlfluff.format.enabled": true,
                "sqlfluff.ignoreLocalConfig": false,
                "sqlfluff.ignoreParsing": false,
                "sqlfluff.linter.run": "onSave",
                "sqlfluff.experimental.format.executeInTerminal": true,
                "[sql]": {
                    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
                }
            }
        }
    },
    "forwardPorts": [
        57531 // for snowflake externalbrowser loopback forwarding
    ],
    "postCreateCommand": "sudo chmod +x $WORKSPACE_PATH/.devcontainer/install.sh && $WORKSPACE_PATH/.devcontainer/install.sh",
    "remoteUser": "vscode",
    "remoteEnv": {
        "TOOLS_DIR": "/workspaces/app/.devcontainer/tools",
        "DBT_PROFILES_DIR": "/workspaces/app/.venv",
        "SF_AUTH_SOCKET_ADDR": "localhost", //fix snowflake externalbrowser loopback address
        "SF_AUTH_SOCKET_PORT": "57531", //fix snowflake externalbrowser loopback port
        "SF_AUTH_SOCKET_REUSEPORT": "true" //try to reuse port
	}
}
